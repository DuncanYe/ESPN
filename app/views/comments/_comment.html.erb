<div class="commetn">

  <% message.comments.each do |comment|  %>

    <p class="comment-content"><%= comment.content %></p>
    <p class="comment-posted-by">By: <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago</p>
    <div class="link">
      <% if user_signed_in? %>
        <% if comment.user_id == current_user.id %>
          <%= link_to 'Edit', edit_message_comment_path(comment) %>
          <%= link_to 'Trash it', message_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
        
    </div>
    <hr>
  <% end %>

</div>


  
  
  
  
